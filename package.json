{
  "name": "node-typescript-boilerplate",
  "description": "A minimalistic boilerplate to use Node.js with Typescript",
  "keywords": [
    "typescript"
  ],
  "author": "Tobi Fuhrimann",
  "license": "MIT",
  "scripts": {
    "start": "node dist",
    "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.test.ts' --exec 'ts-node' src/index.ts",
    "build": "rimraf dist && tsc",
    "build:docker": "docker build -t node-typescript-boilerplate .",
    "lint": "tslint --fix 'src/**/*.ts'",
    "pretest": "npm run lint",
    "test": "mocha --require ts-node/register src/**/*.test.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.0",
    "rimraf": "^2.6.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "tslint --project tsconfig.json --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mastertinner/nodejs-typescript-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/mastertinner/nodejs-typescript-boilerplate/issues"
  },
  "engines": {
    "node": ">=11"
  }
}
