{
  "name": "node-typescript-boilerplate",
  "description": "A minimalistic boilerplate to use Node.js with Typescript",
  "keywords": [
    "typescript"
  ],
  "private": true,
  "author": "Lena Fuhrimann",
  "license": "Apache-2.0",
  "scripts": {
    "start": "node dist",
    "start:dev": "nodemon src/index.ts",
    "pretest": "npm run lint",
    "test": "jest",
    "build": "rimraf dist && tsc",
    "build:image": "docker build -t node-typescript-boilerplate .",
    "lint": "eslint --fix src",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "jest": "^27.0.1",
    "lint-staged": "^12.0.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudlena/nodejs-typescript-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/cloudlena/nodejs-typescript-boilerplate/issues"
  }
}
