{
  "name": "node-typescript-boilerplate",
  "version": "0.0.1",
  "description": "A minimalistic boilerplate to use Node.js with Typescript",
  "keywords": ["typescript"],
  "author": "Tobi Fuhrimann",
  "license": "MIT",
  "scripts": {
    "start": "node dist",
    "start:dev":
      "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.test.ts' --exec 'ts-node' src/index.ts",
    "build": "rimraf dist && tsc",
    "lint": "tslint --fix 'src/**/*.ts'",
    "pretest": "npm run lint",
    "test": "mocha --require ts-node/register/type-check src/**/*.test.ts"
  },
  "dependencies": {
    "@types/node": "^8.5.7"
  },
  "devDependencies": {
    "@types/chai": "^4.1.0",
    "@types/mocha": "^2.2.46",
    "chai": "^4.1.2",
    "mocha": "^4.1.0",
    "nodemon": "^1.14.8",
    "rimraf": "^2.6.2",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mastertinner/nodejs-typescript-boilerplate.git"
  },
  "bugs": {
    "url":
      "https://github.com/mastertinner/nodejs-typescript-boilerplate/issues"
  },
  "engines": {
    "node": "^8.0.0 || ^9.0.0"
  }
}
