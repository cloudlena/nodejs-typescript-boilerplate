{
  "name": "node-typescript-boilerplate",
  "version": "0.0.1",
  "description": "A minimalistic boilerplate to use Node.js with Typescript",
  "keywords": [
    "typescript"
  ],
  "author": "Tobias Fuhrimann",
  "license": "MIT",
  "scripts": {
    "start": "node dist",
    "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "build": "rimraf dist && tsc",
    "lint": "tslint --fix 'src/**/*.ts'",
    "pretest": "npm run lint",
    "test": "mocha --compilers ts-node/register src/**/*.spec.ts"
  },
  "dependencies": {
    "@types/node": "^8.0.28"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.43",
    "chai": "^4.1.2",
    "mocha": "^3.5.0",
    "nodemon": "^1.12.0",
    "rimraf": "^2.6.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mastertinner/nodejs-typescript-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/mastertinner/nodejs-typescript-boilerplate/issues"
  },
  "engines": {
    "node": ">=8"
  }
}
