{
  "name": "node-typescript-boilerplate",
  "description": "A minimalistic boilerplate to use Node.js with Typescript",
  "keywords": [
    "typescript"
  ],
  "author": "Tobi Fuhrimann",
  "license": "MIT",
  "scripts": {
    "start": "node dist",
    "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.test.ts' --exec 'ts-node' src/index.ts",
    "build": "rimraf dist && tsc",
    "build:docker": "docker build -t node-typescript-boilerplate .",
    "lint": "eslint --fix 'src/**/*.ts'",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.1",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mastertinner/nodejs-typescript-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/mastertinner/nodejs-typescript-boilerplate/issues"
  },
  "engines": {
    "node": ">=12"
  }
}
